<?xml version="1.0" encoding="UTF-8" ?>

<templates>
    <t t-name="report_dept">
        <div id="search_top" class="container" style="margin-top:20px">
            <form role="form" class="form-inline">
                <div class="form-group col-md-5 row">
                    <label for="share_kind_code" style="font-weight:800">c_share_kind_code:</label>
                    <select id="share_kind_code" default="sy01" class="form-control" style="margin-left:20px">
                        <option value="sys01" selected="selected">sys01</option>
                        <option value="sys02">sys02</option>
                        <option value="sys03">sys03</option>
                        <option value="sys04">sys04</option>
                    </select>
                </div>

                <div class="form-group col-md-5 row">
                    <label for="year" style="font-weight:800">year:</label>
                    <select id="year" class="form-control" style="margin-left:20px">
                        <option value="2018">2018</option>
                        <option value="2019" selected="selected">2019</option>
                        <option value="2020">2020</option>
                        <option value="2021">2021</option>
                    </select>
                </div>

                <button id="search" class="btn btn-primary">查询</button>
            </form>
        </div>
        <div id="grid" style="column-gap: 2em;width: 100%;margin: 2em auto;"></div>
    </t>
</templates>